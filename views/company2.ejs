<html>
<head>
  <title>statistics</title>
  <link rel="stylesheet" type="text/css" href="/bui/css/bs3/bui-min.css">
  <link rel="stylesheet" type="text/css" href="/bui/css/bs3/dpl-min.css">
  <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
</head>
<body>
  <div class="header">
    <div style="float:left;width:400px">
      <img height='100%' src="/images/logo.png">
      <label class="title">万和数据OA系统</label>
    </div>
    <div style="float:right;height:100px;">
      <div id="user">
        <span><%=user.userName%></span>
        <a href="/logout">退出</a>
      </div>
      <ul id="menu">
        <li><a href="/companys/2">分公司管理</a> </li>
        <li><a href="/users/admin">员工管理</a> </li>
        <li><a href="/statistics/admin">统计信息</a> </li>
      </ul>
    </div>
  </div>
  <div class="wrap">
    <div class="search-bar">
      <form id="form-search" class="form-horizontal">
          <div class="row">
            <div class="control-group span7">
              <label class="control-label">公司名称</label>
              <div class="controls">
                <input type="text" name="name"  class="control-text">
              </div>
            </div>
            <div class="form-actions span4">
              <button id="btnSearch" type="submit" class="button button-primary">搜索</button>
            </div>
            <ul class="toolbar " style="float:right">
              <li><button type="button"  id="btn_add_company" class="button button-primary">+</button></li>
            </ul>
          </div>
      </form>
    </div>
    <div class="">
      <div id='grid'></div>
    </div>
  </div>
</body>
</html>

<div id="dialog_add_company" class="hide">
  <form id="form_add_company" class="form-horizontal">
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">公司名称：</label>
        <div class="controls "><input data-rules="{required:true}" name="name" class="input-large" type="text"> </div> </div>
    </div>
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">所属公司：</label>
        <div class="controls "> <input id="parentCompany"  class="input-large" type="text"> </div> </div>
    </div>
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">备注：</label>
        <div class="controls ">
          <textarea name="remark" class="input-large" type="text"></textarea>
        </div>
      </div>
    </div>
  </form>
</div>

<div id="dialog_update_company" class="hide">
  <form id="form_update_company" class="form-horizontal">
    <input type="hidden" name="id" data-view="id">
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">公司名称：</label>
        <label class="control-label" data-view="name">公司名称</label>
      </div>
    </div>
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">所属公司：</label>
        <label class="control-label" data-view="parentCompany">1232</label>
    </div>
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">备注：</label>
          <textarea name="remark" class="input-large" type="text" data-view="remark"></textarea>
      </div>
    </div>
  </form>
</div>

<script type="text/javascript" src="/javascripts/jquery-1.8.1.min.js"></script>
<script type="text/javascript" src="/bui/seed-min.js"></script>
<script type="text/javascript" src="/javascripts//main.js"></script>
<script type="text/javascript" src="/javascripts//global.js"></script>
<script type="text/javascript" src="/javascripts//autocomplete.js"></script>
<script type="text/javascript" src="/javascripts/assets/company2.js"></script>