<html>
  <head>
    <title>Company Manage</title>
    <% include links %>
    <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
  </head>
  <body>
    <div  class="header row-fluid" style="background:#555;height:10%">
      <div class="logo span3" style="height:100%">
        <img height='100%' src="/images/logo.png">
      </div>
      <div class="title span17" style="height:100%"></div>
      <div class="span4" style="height:100%">
        <span><%=user.userName%></span>
        <a href="/logout">退出</a>
      </div>
    </div>
    <div style="height:90%" class="context clearfix row-fluid" >

      <div class="left span3" style="height:100%">
        <ul class="clearfix" id="nav">
          <li><a href="/customers">客户管理</a> </li>
          <li><a href="/statistics">统计信息</a> </li>
        </ul>
      </div>

      <div class="span18" style="">
        <div class="row-fluid">
          <div class="span24">
            <div class="">
              <form id="form_search">
                <label class="span">客户姓名:</label><input class="span" type="text" name="customerName">
                <label class="span">客户类型:</label>
                <select name="customerType"  class="span">
                  <option value='1'>准客户</option>
                  <option value='2'>沟通潜力客户</option>
                  <option value='3'>一般客户</option>
                  <option value='4'>未有兴趣</option>
                  <option value='5'>成交客户</option>
                  <option value='6'>黑名单</option>
                </select>
                <button  class="span button button-primary">查找</button>
              </form>
              <ul class="toolbar " style="float:right">
                <li><button  id="btn_search_customer" class="button button-primary"><span class="x-icon x-icon-success"><i class="icon icon-search icon-white"></i></span></button></li>
                <li><button  id="btn_add_customer" class="button button-primary">+</button></li>
              </ul>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span24">
            <div id='grid'></div>
          </div>
        </div>

      </div>
    </div>
  </body>
</html>

