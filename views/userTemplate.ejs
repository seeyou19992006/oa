<span><%=user.userName%></span>
<a href="/logout">退出</a>
<button id="btn_change_password" class="button button-primary button-mini" title="修改密码"><i class="icon-cog icon-white"></i> </button>


<div style="display:none" id="dialog_chang_password">
  <form id="form_chang_password" class="form-horizontal">
    <div class="row-fluid">
          <input type="password" placeholder='旧密码' name="password_old" class="span24">
    </div>
    <div class="row-fluid">
          <input type="password" placeholder='新密码' id="password_new1" name="password_new1" class="span24">
    </div>
    <div class="row-fluid">
          <input type="password" placeholder='重复密码' data-rules="{equalTo:'#password_new1'}" name="password_new2" class="span24">
    </div>
  </form>
</div>

<div id="dialog_search_customer" class="hide">
  <div class="row">
    <form id="form_search_customer" class="form-horizontal">
        <div class=" span7">
          <label class="control-label">手机号</label>
          <div class="controls">
            <input type="text" name="cellPhone"  class="control-text">
          </div>
        </div>
        <div class=" span7">
          <label class="control-label">QQ号</label>
          <div class="controls">
            <input type="text" name="qqNumber"  class="control-text">
          </div>
        </div>
        <div class=" span2">
          <button id="btn_search_customer" type="button" class="button button-primary">搜索</button>
        </div>
    </form>
  </div>
  <div class="row hide" id="div_show_result_search_customer">
    <div class="control-group span7">
      <label class="control-label">客户姓名:</label>
      <span class="controls" data-view="customerName"></span>
    </div>
    <div class="control-group span7">
      <label class="control-label">客户类型:</label>
      <span class="controls" data-view="customerType"></span>
    </div>
    <div class="control-group span7">
      <label class="control-label">性别:</label>
      <span class="controls" data-view="sex"></span>
    </div>
    <div class="control-group span7">
      <label class="control-label">手机号:</label>
      <span class="controls" data-view="cellPhone"></span>
    </div>
    <div class="control-group span7">
      <label class="control-label">QQ号:</label>
      <span class="controls" data-view="qqNumber"></span>
    </div>
    <div class="control-group span7">
      <label class="control-label">添加人Id:</label>
      <span class="controls" data-view="userId"></span>
    </div>
    <div class="control-group span7">
      <label class="control-label">添加人姓名:</label>
      <span class="controls" data-view="userName"></span>
    </div>
  </div>
  <div class="row" id="grid_search_customer"></div>
</div>