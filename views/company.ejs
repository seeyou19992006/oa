<html>
  <head>
    <title>Company Manage</title>
    <link rel="stylesheet" type="text/css" href="/bui/css/bs3/bui-min.css">
    <link rel="stylesheet" type="text/css" href="/bui/css/bs3/dpl-min.css">
    <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
  </head>
  <body>
    <div  class="header" style="background:#222;height:10%">
      <div class="logo"></div>
      <div class="title"></div>
    </div>
    <div style="height:90%" class="context clearfix row-fluid" >

      <div class="left span3" style="height:100%">
        <ul class="clearfix" id="nav">
          <li><a href="/companys">分公司管理</a> </li>
          <li><a href="/users/admin">员工管理</a> </li>
          <li><a href="/info">统计信息</a> </li>
        </ul>
      </div>

      <div class="span18" style="">
        <div class="row-fluid">
          <div class="span24">
            <div class="">
              <form id="form_search">
              <label class="span">公司名称:</label><input class="span" type="text" name="name">
              <button  class="span button button-primary">查找</button>
              </form>
              <ul class="toolbar " style="float:right">
                <li><button  id="btn_add_company" class="button button-primary">+</button></li>
              </ul>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span24">
            <div id='grid'></div>
          </div>
        </div>

      </div>
    </div>
  </body>
</html>

<div id="dialog_add_company" class="hide">
  <form id="form_add_company" class="form-horizontal">
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">公司名称：</label>
        <div class="controls "><input data-rules="{required:true}" name="name" class="input-large" type="text"> </div> </div>
    </div>
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">所属公司：</label>
        <div class="controls "> <input id="parentCompany"  class="input-large" type="text"> </div> </div>
    </div>
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">备注：</label>
        <div class="controls ">
          <textarea name="remark" class="input-large" type="text"></textarea>
        </div>
      </div>
    </div>
  </form>
</div>

<div id="dialog_update_company" class="hide">
  <form id="form_update_company" class="form-horizontal">
    <input type="hidden" name="id" data-view="id">
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">公司名称：</label>
        <label class="control-label" data-view="name">公司名称</label>
      </div>
    </div>
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">所属公司：</label>
        <label class="control-label" data-view="parentCompany">1232</label>
    </div>
    <div class="row">
      <div class="control-group span15">
        <label class="control-label">备注：</label>
          <textarea name="remark" class="input-large" type="text" data-view="remark"></textarea>
      </div>
    </div>
  </form>
</div>

