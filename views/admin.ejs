<html>
<head>
  <title>statistics</title>
  <link rel="stylesheet" type="text/css" href="/bui/css/bs3/bui-min.css">
  <link rel="stylesheet" type="text/css" href="/bui/css/bs3/dpl-min.css">
  <link rel='stylesheet' type="text/css" href='/stylesheets/style.css' />
</head>
<body>
  <div class="header">
    <div style="float:left;width:400px">
      <img height='100%' src="/images/logo.png">
      <label class="title">万和数据OA系统</label>
    </div>
    <div style="float:right;height:100px;">
      <div id="user">
        <% include userTemplate %>
      </div>
      <ul id="menu">
        <li><a href="/companys/2">分公司管理</a> </li>
        <li><a href="/users/admin">员工管理</a> </li>
      </ul>
    </div>
  </div>
  <div class="wrap">
    <div class="search-bar">
      <form id="form-search" class="form-horizontal">
          <div class="row">
            <div class="control-group span7">
              <label class="control-label">姓名</label>
              <div class="controls">
                <input type="text" name="userName"  class="control-text">
              </div>
            </div>
            <div class="control-group span7">
              <label class="control-label">工号</label>
              <div class="controls">
                <input type="text" name="userId"  class="control-text">
              </div>
            </div>
            <div class="form-actions span4">
              <button id="btnSearch" type="submit" class="button button-primary">搜索</button>
            </div>
            <ul class="toolbar " style="float:right">
              <li><button type="button"  id="btn_add_user" class="button button-primary">+</button></li>
            </ul>
          </div>
      </form>
    </div>
    <div class="">
      <div id='grid'></div>
    </div>
  </div>
</body>
</html>

<div id="dialog_add_user" class="hide">
  <form id="form_add_user" class="form-horizontal">
    <div class="row-fluid">
      <div class="span8">
        <span class="span7">员工帐号:</span>
        <span class="span14">
          <input type="text" name="userId" class="span22">
        </span>
      </div>
      <div class="span8">
        <span class="span8">密码:</span>
        <span class="span14">
          <input type="text" name="password" class="span22">
        </span>
      </div>
      <div class="span7">
        <span class="span8">姓名:</span>
        <span class="span14">
          <input type="text" name="userName" class="span22">
        </span>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span8">
        <span class="span7">员工类型:</span>
        <span class="span14">
          <select name="role"  class="input-span-lg span22">
            <option value='1'>管理员</option>
            <option value="2">普通员工</option>
          </select>
        </span>
      </div>
      <div class="span8">
        <span class="span8">所属公司:</span>
        <span class="span14">
          <input type="text" id="input_companyId" class="span22">
        </span>
      </div>
      <div class="span7">
        <span class="span8">是否有效:</span>
        <span class="span14">
          <select name="effective"  class="input-span-lg span22">
            <option value='true'>是</option>
            <option value="false">否</option>
          </select>
        </span>
      </div>
    </div>
  </form>
</div>

<div id="dialog_update_user" class="hide">
  <form id="form_update_user" class="form-horizontal">
    <input type="hidden" name="userId">
    <div class="row-fluid">
      <div class="span8">
        <span class="span7">员工帐号:</span>
        <span class="span14" data-view="userId">
        </span>
      </div>
      <div class="span8">
        <span class="span8">密码:</span>
        <span class="span14">
          <input type="text" name="password" class="span22">
        </span>
      </div>
      <div class="span7">
        <span class="span8">姓名:</span>
        <span class="span14">
          <input type="text" name="userName" class="span22">
        </span>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span8">
        <span class="span7">员工类型:</span>
        <span class="span14" data-view="roleString">
        </span>
      </div>
      <div class="span8">
        <span class="span8">所属公司:</span>
        <span class="span14">
          <!-- <input type="text" id="input_companyId" class="span22"> -->
        </span>
      </div>
      <div class="span7">
        <span class="span8">是否有效:</span>
        <span class="span14">
          <select name="effective"  class="input-span-lg span22">
            <option value='true'>是</option>
            <option value="false">否</option>
          </select>
        </span>
      </div>
    </div>
  </form>
</div>

<% include scripts %>
<script type="text/javascript" src="/javascripts/assets/admin.js"></script>